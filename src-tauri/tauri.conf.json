{
"$schema": "https://schema.tauri.app/config/2",
"productName": "Nono OS Helper",
"version": "0.1.0",
"identifier": "app.nono.nikokuma",
"build": {
"beforeDevCommand": "npm run dev",
"devUrl": "http://localhost:1420",
"beforeBuildCommand": "npm run build",
"frontendDist": "../build"
},
"app": {
"macOSPrivateApi": true,
"windows": [
{
"label": "default",
"title": "nono-app",
"transparent": true,
"decorations": false,
"resizable": true,
"fullscreen": false,
"alwaysOnTop": true,
"width": 300,
"height": 450,
"titleBarStyle": "Transparent",
"hiddenTitle": true,
"dragDropEnabled": false,
"focus": true
}
],
"security": {
"csp": null
}
},

"bundle": {
"active": true,
"targets": "all",
"icon": [
"icons/NonoIcon.png"
]
}
}
